{
  "name": "tsx",
  "displayName": "tsx",
  "description": "esbuild-kit tsx integrated",
  "version": "0.1.1",
  "publisher": "rxliuli",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "public/logo.png",
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "build": "esbuild ./src/extension.ts --outfile=./dist/extension.js --bundle --sourcemap --external:vscode --platform=node --format=cjs",
    "dev": "pnpm build --watch",
    "pretest": "pnpm build",
    "release": "pnpm build && vsce package --no-dependencies"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rxliuli/tsx"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:tsx.runOnSave",
    "onCommand:tsx.runOnce"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tsx.runOnSave",
        "title": "Run on save for Current File",
        "category": "tsx",
        "icon": "$(debug-start)"
      },
      {
        "command": "tsx.stopCurrent",
        "title": "Stop current",
        "category": "tsx",
        "icon": "$(debug-stop)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "tsx.runOnSave",
          "when": "resourceLangId == typescript && !tsx.runner"
        },
        {
          "command": "tsx.stopCurrent",
          "when": "resourceLangId == typescript && tsx.runner"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.7",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "tsx": "^3.9.0",
    "which": "^2.0.2"
  }
}
